{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/.git": true,
        "**/dist": true,
        "**/build": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/thumbs.db": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/*.pyc": true,
        "**/.env": false  // Keep .env visible so you can edit it!
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.venv/**": true,
        "**/__pycache__/**": true
    }
}